! A = 38, S = 39, D = 40, F = 41, G = 42, H = 43, J = 44, K = 45, L = 46, Ã– = 47

! Use Control_L as Mode_switch
keycode 37 = Mode_switch

! Use Caps Lock as control modifier
!keycode 66 = Control_L
!add control = Control_L
!add control = Caps_Lock
add control = Control_L Control_R

! Use Alt_L as Mode_switch
!keycode 64 = Mode_switch
!add mod5 = Mode_switch
!add mod5 = Alt_L Mode_switch

! Use Alt_L as ISO_Level3_Shift
!keycode 64 = ISO_Level3_Shift Alt_L
!add mod1 = Alt_L Alt_R

!add mod4 = Menu Super_L

! Use Alt_R as Alt
!keycode 108 = Alt_R
!add mod1 = Alt_R
! Use Ctrl_L as Alt
!keycode 37 = Ctrl_L
!keycode 37 = Alt_L
!add mod1 = Alt_L

! Use Control_L as Meta
!keycode 37 = Meta_L
!add mod1 = Meta_L

!keycode 105 = Hyper_L
!add mod2 = Hyper_R

!keycode 133 = Super_L
!add mod5 = Super_L

